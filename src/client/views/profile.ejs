<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>ToDo</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
        integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous" />

    <link href="https://fonts.googleapis.com/css?family=Pacifico&display=swap" rel="stylesheet" />
    <link rel="icon" type="png" href="favicon.png" />
    <link href="../css/todoo.css" rel="stylesheet" />
</head>

<body>
    <div class="todo-header">
        <div class="hd1align">
            <section class="hd1">Hello <%= name %></section>
        </div>
        <div class="hd2align">  
            <h1 class="hd2">To-Do List</h1>
        </div>
    </div>

    <div class="todo-container">
        <div class="todo-input-cntr">
        <div class="todo-bar todo-input">
            <form class="" method="POST" action="/add">
                <label for="item" class="sr-only">Item</label>
                <input type="text" id="item" name="item" class="form-control" placeholder="Add a todo" required
                    autofocus />
        </div>
        <div class="todo-bar post-btn">
                <button class="btn btn-dark" type="submit">
                    <i class="fas fa-plus"></i>
                </button>
        </div>
        </form>
        
        <div class="todo-bar signout-btn">
            <form class="" method="POST" action="/signout">
                <button class="btn btn-dark" type="submit">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </form>
        </div>
        </div>
        <br><br><br>
    <% for(var i=todos.length-1;i>=0;i--){ %>
        <div class="todo-viewer ">
                <div class="todo-content <%= todos[i].done%>"><%= todos[i].item%></div>
                <form method="POST" action="/editbar">
                    <button name="id" value="<%= todos[i].id%>" class="btn btn-edit" type="submit"><i class="fas fa-edit"></i></button>
                </form>
                <form method="POST" action="/delete">
                    <button name="id" value="<%= todos[i].id%>" class="btn btn-delete" type="submit"><i class="fas fa-trash-alt"></i></button>
                </form>
                <form method="POST" action="/done">
                    <button name="id" value="<%= todos[i].id%>" class="btn btn-done" type="submit"><i class="fas fa-check-double"></i></button>
                </form>
                
        </div>
        
        <!-- edittodo -->

        <% if(todos[i].edit){ %>
            <div class="todo-editbar">
                <form action="/editdata" method="post">
                    <input type="text" name="item"  class="form-control editdatabar" value="<%= todos[i].item%>" autofocus>
                    <button class="btn btn-done" name="id" value="<%= todos[i].id%>" type="submit"><i class="fas fa-check"></i></button>
                </form>
            </div>
            <br>
        <% } %>
    <% } %>
    </div>

</body>

</html>